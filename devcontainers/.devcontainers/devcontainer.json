// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "OpenUniversity",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile

	"image": "mcr.microsoft.com/devcontainers/base:noble",

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "latest"
		},
		"ghcr.io/prulloac/devcontainer-features/latex:1": {
			"scheme": "small",
			"mirror": "https://gb.mirrors.cicku.me/ctan/systems/texlive/tlnet/",
			"packages": "biber,biblatex,biblatex-apa,csquotes,ifmtarg,isodate,minted,physics,setspace,siunitx,substr,xifthen"
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],postCreateCommand

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install ipykernel ipywidgets pandas matplotlib scipy astropy",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-toolsai.datawrangler",
				"ms-toolsai.jupyter",
				"neo-ltex.ltex",
				"shardulm94.trailing-spaces"
			],

			"settings": {
				// Ltex settings
				"ltex.enabled": true,
				"ltex.language": "en-GB",
				"ltex.additionalRules.motherTongue": "en-GB",
				// Latex workshop settings
				"latex-workshop.synctex.afterBuild.enabled": true
			}
		}
	},

	"mounts": [
		"source=${localEnv:HOME}/texmf,target=/home/vscode/texmf,type=bind,consistency=cached,readonly"
	]

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",
}
